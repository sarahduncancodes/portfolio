<!DOCTYPE html>
<html lang="en" title="work page">

<head>
    <meta charset="UTF-8">
</head>

<body class="work-page">
    {{>main}}
    <div class="recent">
        <div class="recent-title">Recent work</div>
        <div class="recent-categories">
            <div class="category" onclick="showAll()">All</div>
            <div class="category" onclick="showWork()">Work Projects</div>
            <div class="category" onclick="showPassion()">Passion Projects</div>
        </div>
    </div>
    <div class="work-projects">
        {{#each projects}}
        <a class="work-obj" id="{{id}}" href="/project/{{id}}">
            <img src="{{coverphoto}}" class="work-img" alt-text="A screenshot of the project website.">
            <div class="work-title">{{title}}</div>
            <div class="work-hinttext">{{organisation}}</div>
        </a>
        {{/each}}
    </div>
    {{>footer}}
</body>

</html>

<script>
    var one = document.getElementById("1");
    var two = document.getElementById("2");
    var three = document.getElementById("3");
    var four = document.getElementById("4");

    function showWork() {
        one.style.display = "inline-block";
        two.style.display = "inline-block";
        three.style.display = "none";
        four.style.display = "inline-block";
    }

    function showPassion() {
        one.style.display = "none";
        two.style.display = "none";
        three.style.display = "inline-block";
        four.style.display = "none";
    }

    function showAll() {
        one.style.display = "inline-block";
        two.style.display = "inline-block";
        three.style.display = "inline-block";
        four.style.display = "inline-block";
    }

</script>